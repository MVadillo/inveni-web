<body class="hold-transition login-page">
      <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
          <div class="card-header text-center">
            <a href="#" class="h1"><img src="../dist/img/logo.png" alt="Inveni Logo" ></a>
          </div>
          <div class="card-body">
            <p class="login-box-msg">Login</p>
      
            <form class="" action="/web/login" method="post" role="login">
              <div class="input-group mb-3">
                  <input id="username" name="username" type="text" name="text" required class="form-control" placeholder="Usuario"/>
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                  </div>
                </div>
              </div>
              <div class="input-group mb-3">
                  <input type="password" id="password" name="password" required class="form-control" placeholder="Password" />
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-8">
                  <div class="icheck-primary">
                    <input type="checkbox" id="remember">
                    <label for="remember">
                      Recordarme
                    </label>
                  </div>
                </div>
                <!-- /.col -->
                <div class="col-4">
                  <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                </div>
                <!-- /.col -->
              </div>
            </form>
      
            <!--<div class="social-auth-links text-center mt-2 mb-3">
              <a href="#" class="btn btn-block btn-primary">
                <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
              </a>
              <a href="#" class="btn btn-block btn-danger">
                <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
              </a>
            </div>-->
            <!-- /.social-auth-links -->
      
            <!--<p class="mb-1">
              <a href="#">Olvide mi contrase√±a</a>
            </p>
            <p class="mb-0">
              <a href="#" class="text-center">Registrarse</a>
            </p>-->
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.login-box -->
      <script type="text/javascript">
            document.getElementById('username').focus();

            input.addEventListener("keyup", function(event) {
            // Number 13 is the "Enter" key on the keyboard
            if (event.keyCode === 13) {
              // Trigger the button element with a click
              document.getElementById("username").click();
            }
          });
      </script>
</body>
</html>